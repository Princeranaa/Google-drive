<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>File Upload</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 dark:bg-gray-800">
  <main class="p-4">
    <button onclick="showPopUp()" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
      Upload File
    </button>

    <!-- Upload Popup -->
    <div class="pop hidden fixed top-0 left-0 w-full h-full flex items-center justify-center bg-black bg-opacity-50">
      <div class="relative bg-white p-6 rounded shadow-md w-96">
        <form action="/upload" method="post" enctype="multipart/form-data">
          <div class="mb-4">
            <label for="file" class="block text-sm font-medium text-gray-700">Choose a file</label>
            <input type="file" name="file" id="file" class="mt-1 block w-full border rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
          </div>
          <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded">
            Upload
          </button>
        </form>
        <button onclick="hidePopUp()" class="absolute top-2 right-2 text-gray-500 text-lg">
          &times;
        </button>
      </div>
    </div>

    <!-- Uploaded Files Section -->
    <div class="mt-8">
      <h2 class="text-xl font-bold mb-4">Uploaded Files</h2>
      <ul class="space-y-4">
        <% uploadedFiles.forEach(file => { %>
          <li class="p-4 bg-white rounded shadow flex justify-between items-center">
            <span><%= file.fileName %></span>
            <div>
              <a href="<%= file.fileUrl %>" download="<%= file.fileName %>" class="bg-green-500 hover:bg-green-700 text-white py-1 px-3 rounded">
                View
              </a>
            </div>
          </li>
        <% }) %>
      </ul>
    </div>
  </main>

  <script>
    function showPopUp() {
      document.querySelector('.pop').style.display = 'flex';
    }

    function hidePopUp() {
      document.querySelector('.pop').style.display = 'none';
    }
  </script>
</body>
</html>
